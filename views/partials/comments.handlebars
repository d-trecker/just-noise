<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
      <img src="{{comment_img}}" alt="">
      <a href="/comment/{{id}}">Edit Comment</a>
    </section>
  {{/each}}
</div>