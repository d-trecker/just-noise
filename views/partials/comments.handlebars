<div class="comments">
  {{#each this}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
      <img src="{{comment_img}}" alt="" />
      <div class="ecomment-link">
        {{#if modify}}
          <a href="/comment/{{id}}">Edit Comment</a>
        {{/if}}
      </div>
    </section>
  {{/each}}
</div>