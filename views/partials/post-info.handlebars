<article class="post">  
  <div class ={{post_genre}}>
    <a href="/post/{{id}}" target="" class="post-header">{{title}} by {{user.username}} on {{format_date created_at}} 
    <br>Genre: {{post_genre}} </a>
  </div>
  <div class="meta">
     <span class="post-content">{{ post_content}} </span>
     <br>
     {{#if post_url}}
     <div class="post-img-div">
       <img class="post-img" src="{{post_url}}" >
     </div>
     {{/if}}
     <br>
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>