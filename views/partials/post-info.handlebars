<article class="post">  
  <div class ={{post_genre}}>
    <a href="/post/{{id}}" target="" class="post-header">{{title}} by {{user.username}} on {{format_date created_at}} 
    <br>Genre: {{post_genre}} </a>
  </div>
  <div class="meta">
     <span>{{ post_content}} </span>
     <br>
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>
